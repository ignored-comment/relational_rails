<%= form_with url: "/refrigerators", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>

  <%= form.label "has freezer?" %>
  <%= form.check_box :has_freezer, {}, checked = "true", unchecked = "false" %><br>

  <%= form.label "capacity in cubic feet" %>
  <%= form.number_field :capacity_cubic_feet, in: 1..99, step: 1%><br>
  
  <%= form.submit 'Create Refrigerator' %>
<% end %>