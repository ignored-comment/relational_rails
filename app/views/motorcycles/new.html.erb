<%= form_with url: "/garages/#{@garage.id}/motorcycles", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>

  <%= form.label "ready to ride?" %>
  <%= form.check_box :ride_ready, {}, checked = "true", unchecked = "false" %><br>

  <%= form.label "model year" %>
  <%= form.number_field :model_year, in: 1900..2050, step: 1%><br>
  
  <%= form.submit 'Create Motorcycle' %>
<% end %>